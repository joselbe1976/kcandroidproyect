<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/platoFoto"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_margin="1dp"
        app:srcCompat="@mipmap/icono_2" />

    <TextView
        android:id="@+id/platotitulo"
        android:layout_width="0dp"
        android:layout_height="23dp"
        android:layout_marginEnd="@dimen/default_margin_8"
        android:layout_marginStart="@dimen/default_margin_8"
        android:layout_marginTop="@dimen/default_margin_8"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="@dimen/subtitulo_1"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/platoFoto"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Pisto manchego" />

    <TextView
        android:id="@+id/textPlatoCliente"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/default_margin_8"
        android:layout_marginStart="@dimen/default_margin_8"
        android:layout_marginTop="@dimen/default_margin"
        android:text="TextView"
        android:textAlignment="viewStart"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/subtutulo_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/platoFoto"
        app:layout_constraintTop_toBottomOf="@+id/platotitulo"
        tools:text="Sin Ketchup y sin Ajo. Poco hecho" />


</android.support.constraint.ConstraintLayout>